{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Client (Chrome)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client_source",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///client_source/*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Server (connect)",
      "address": "127.0.0.1",
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/synapse.js"
    }
  ]
}