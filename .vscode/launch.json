{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch", // or - attach
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client_source",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///client_source/*": "${webRoot}/*"
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "vuejs: firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client_source",
      "pathMappings": [{ "url": "webpack:///src/", "path": "${webRoot}/" }]
    }
  ]
}